ions));\n```\n\nNote: We suggest storing your SendGrid username and password as enviroment variables.\n\nCreate an email and send it off!\n\n```javascript\nvar email = {\n\tto: ['joe@foo.com', 'mike@bar.com'],\n\tfrom: 'roger@tacos.com',\n\tsubject: 'Hi there',\n\ttext: 'Awesome sauce',\n\thtml: '<b>Awesome sauce</b>'\n};\n\nmailer.sendMail(email, function(err, res) {\n\tif (err) { \n\t\tconsole.log(err) \n\t}\n\tconsole.log(res);\n});\n```\n## License\nLicensed under the MIT License.\n\n","versions":{"0.0.1":{"name":"nodemailer-sendgrid-transport","version":"0.0.1","description":"SendGrid transport for Nodemailer","main":"src/sendgrid-transport.js","scripts":{"test":"mocha"},"keywords":["SendGrid","Nodemailer"],"author":{"name":"Eddie Zaneski"},"license":"MIT","dependencies":{"sendgrid":"^1.1.0"},"devDependencies":{"chai":"^1.9.1","mocha":"^1.20.1"},"_id":"nodemailer-sendgrid-transport@0.0.1","_shasum":"b714d210c8171c3ebe325bef23fd4eaf663032b1","_from":".","_npmVersion":"1.4.9","_npmUser":{"name":"eddiezane","email":"eddiezane@gmail.com"},"maintainers":[{"name":"eddiezane","email":"eddiezane@gmail.com"}],"dist":{"shasum":"b714d210c8171c3ebe325bef23fd4eaf663032b1","tarball":"https://registry.npmjs.org/nodemailer-sendgrid-transport/-/nodemailer-sendgrid-transport-0.0.1.tgz","integrity":"sha512-PHlPxs60n53ROTF4rVGFSb2I2lixQbtVpRY80FI8DrKIPWs03MWzwkGIR7ynHTnUY1hMRg0Tc5YX5zdJrBdcLw==","signatures":[{"keyid":"SHA256:jl3bwswu80PjjokCgh0o2w5c2U4LhQAE57gj9cz1kzA","sig":"MEUCIFHZMNltxUNoF3TCG+eNZALBheBFzo1tV4nn7mj4Xs9uAiEAjPy8V0H60gjvIhXh9QFOoANwygz/aLCiiFviMbLcQNw="}]}},"0.0.2":{"name":"nodemailer-sendgrid-transport","version":"0.0.2","description":"SendGrid transport for Nodemailer","main":"src/sendgrid-transport.js","scripts":{"test":"mocha"},"keywords":["SendGrid","Nodemailer"],"author":{"name":"SendGrid","email":"community@sendgrid.com","url":"sendgrid.com"},"contributors":[{"name":"Eddie Zaneski"},{"name":"Will Smidlein","email":"ws@sendgrid.com"}],"license":"MIT","dep